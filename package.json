{
	"name": "allenheath-sq",
	"version": "3.0.0",
	"type": "module",
	"main": "dist/main.js",
	"scripts": {
		"postinstall": "husky",
		"test": "vitest --run",
		"check-types": "tsc -p tsconfig.json --noEmit  --noUnusedLocals false",
		"package": "yarn build && companion-module-build",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "yarn lint:raw .",
		"knip": "knip",
		"check": "yarn check-types && yarn lint && yarn knip && yarn build && echo PASS || echo FAIL",
		"bt": "yarn install && yarn check-types && yarn lint && yarn knip && yarn build && yarn test && echo PASS || echo FAIL"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-allenheath-sq.git"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss,yaml}": [
			"prettier --write"
		],
		"*.{mjs,ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^18.12"
	},
	"dependencies": {
		"@companion-module/base": "~1.10.0",
		"eventemitter3": "^5.0.1"
	},
	"devDependencies": {
		"@companion-module/tools": "~2.0.4",
		"@types/node": "^22.15.18",
		"eslint": "~9.22.0",
		"eslint-plugin-n": "^17.17.0",
		"husky": "^9.0.11",
		"knip": "^5.46.0",
		"lint-staged": "^15.5.0",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"type-testing": "^0.2.0",
		"typescript": "~5.8.2",
		"typescript-eslint": "~8.26.1",
		"vitest": "^3.0.9"
	},
	"packageManager": "yarn@4.9.1"
}
